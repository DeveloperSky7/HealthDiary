<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfomationFragment">

    <TextView
        android:id="@+id/fragment_infomation_subTile1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="left|center"
        android:text="  신체 기록"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="#EFECCD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/fragment_infomation_subTile1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:maxLines="1"
                android:text="키 :"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/fragment_infomation_height"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/user_login_btn"
                android:gravity="left|center"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:maxLines="1"
                android:text="몸무게 :"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/fragment_infomation_weight"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/user_login_btn"
                android:gravity="left|center"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:maxLines="1"
                android:text="나 이 :"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/fragment_infomation_age"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/user_login_btn"
                android:gravity="left|center"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:maxLines="1"
                android:text="성 별 :"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/fragment_infomation_gender"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/user_login_btn"
                android:gravity="left|center"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp" />

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/fragment_infomation_subTile2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="200dp"
        android:background="#EFECCD"
        android:gravity="left|center"
        android:text="  분석 결과"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_infomation_subTile1" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/fragment_infomation_subTile2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="BMI\n(체질량지수)"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/fragment_infomation_bmi"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:background="@drawable/user_login_btn"
                android:gravity="left|center"
                android:layout_gravity="center"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:maxLines="2"
                android:text="BMR\n(기초대사량)"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/fragment_infomation_bmr"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:background="@drawable/user_login_btn"
                android:gravity="left|center"
                android:layout_gravity="center"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp" />

        </TableRow>

    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>